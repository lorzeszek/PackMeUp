<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PackMeUp.Views.PackingListPage"
             xmlns:local="clr-namespace:PackMeUp.ViewModels"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="{Binding Title}">



    <!--<RefreshView Command="{Binding RefreshCommand}" 
             IsRefreshing="{Binding IsRefreshing}">
        
    </RefreshView>-->

    <Grid Padding="10" RowDefinitions="Auto,*" ColumnDefinitions="*,Auto">

        <Entry Grid.Row="0" Grid.Column="0"
           Placeholder="Dodaj przedmiot..."
           ReturnType="Done"
           Text="{Binding NewItemName, Mode=TwoWay}">
            <Entry.Behaviors>
                <toolkit:EventToCommandBehavior 
                EventName="Completed" 
                Command="{Binding AddItemCommand}" />
            </Entry.Behaviors>
        </Entry>

        <Button Grid.Row="0" Grid.Column="1"
            Text="+" 
            Command="{Binding AddItemCommand}" />

        <!-- Lista -->
        <CollectionView x:Name="PackingListView" Grid.Row="1" Grid.ColumnSpan="2"
                ItemsSource="{Binding Items}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="5" ColumnDefinitions="30,*,Auto">
                        <CheckBox IsChecked="{Binding IsPacked}">
                            <CheckBox.Behaviors>
                                <toolkit:EventToCommandBehavior
                                EventName="CheckedChanged"
                                Command="{Binding Source={x:Reference PackingListView}, Path=BindingContext.ToggleIsPackedCommand}"
                                CommandParameter="{Binding .}" />
                            </CheckBox.Behaviors>
                        </CheckBox>
                        <Label Grid.Column="1" Text="{Binding Name}" />
                        <Label Grid.Column="2" Text="{Binding Category}" 
                       FontSize="12" TextColor="Gray"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>

</ContentPage>