<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PackMeUp.Views.TripListPage"
             x:Name="TripListView"
             xmlns:viewmodels="clr-namespace:PackMeUp.ViewModels"
             Title="{Binding Title}">

    <!--<ContentPage.BindingContext>
        <viewmodels:TripListViewModel />
    </ContentPage.BindingContext>-->

    <StackLayout Padding="10" Spacing="10">

        <!-- Activity Indicator --><!--
        <ActivityIndicator IsRunning="{Binding IsBusy}" 
                           IsVisible="{Binding IsBusy}" 
                           Color="DarkBlue"
                           HeightRequest="30" />-->

        <!-- Lista wycieczek z PullToRefresh -->
        <RefreshView Command="{Binding RefreshCommand}" IsRefreshing="{Binding IsRefreshing}">
            <!--<CollectionView ItemsSource="{Binding Trips}" SelectionMode="Single"
                            SelectionChanged="OnTripSelected">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="5" BackgroundColor="#eee">
                            <Label Text="{Binding Name}" FontSize="18" />
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>-->

            <CollectionView ItemsSource="{Binding Trips}"
                SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="10"
                   Padding="10"
                   HasShadow="True"
                   CornerRadius="10"
                   BackgroundColor="White">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding BindingContext.TripTappedCommand, Source={x:Reference TripListView}}"
                                          CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>

                            <StackLayout>
                                <Label Text="{Binding Name}" FontAttributes="Bold"/>
                                <Label Text="{Binding Description}" FontSize="Small"/>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <Button Text="Dodaj wycieczkÄ™" Command="{Binding AddTripCommand}" />

    </StackLayout>
</ContentPage>